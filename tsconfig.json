{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"moduleResolution": "bundler",
		"paths": {
			"$lib/*": ["./src/lib/*"],
			"$components/*": ["./src/lib/components/ui/*"],
			"$utils/*": ["./src/lib/utils/*"],
			"$custom/*": ["./src/custom/"],
			"$custom-admin/*": ["./src/custom/custom-admin/*"],
			"$custom-auth/*": ["./src/custom/custom-auth/*"],
			"$custom-client/*": ["./src/custom/custom-client/*"],
			"$custom-lessor/*": ["./src/custom/custom-lessor/*"],
			"$custom-public/*": ["./src/custom/custom-public/*"],
			"$reuseable/*": ["./src/custom/reuseable/*"],
			"$static-component/*": ["./src/custom/static-component/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
	"exclude": ["node_modules"]
}
